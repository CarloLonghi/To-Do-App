<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carlolonghi.todo">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/todo_icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/todo_icon2_round"
        android:supportsRtl="true"
        android:logo="@android:color/transparent"
        android:theme="@style/ToDoAppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/ToDoAppTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ItemsActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/ToDoAppTheme">
        </activity>

        <receiver android:name=".widget.ToDoWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/widget_provider" />
        </receiver>

        <service android:name=".widget.MyWidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

    </application>
</manifest>

